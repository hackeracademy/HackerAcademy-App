= form_for @achievement do |f|
  -if @achievement.errors.any?
    #error_explanation
      %h2= "#{pluralize(@achievement.errors.count, "error")} prohibited this achievement from being saved:"
      %ul
        - @achievement.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :value
    = f.text_field :value
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :users
    = select_tag("user_ids[]", options_for_select(User.all_ids, @achievement.user_ids), {:multiple => true, :size => 10})
  .actions
    = f.submit 'Save'
